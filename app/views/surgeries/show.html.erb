<h1><%= @surgery.title %></h1>

<h3>Taking place on: <%= @surgery.day_of_week %></h3>
<h3>In operating room number <%= @surgery.operating_room_number %></h3>

<section class="doctors">
<h3>Doctors performing this surgery</h3>
<ul>
  <% @surgery.doctors.each do |doctor| %>
  <div id="doctor-<%= doctor.id %>">
    <li><%= doctor.name %></li>
    <li><%= doctor.years_experience %> years of experience</li>
  </div>
  <% end %>
</ul>
</section>

<div class="most-and-least">
  <h4>Most experienced doctor: <%= @surgery.most_experienced_doctor.name %> (<%= @surgery.most_experienced_doctor.years_experience %>)</h4>
  <h4>Least experienced doctor: <%= @surgery.least_experienced_doctor.name %> (<%= @surgery.least_experienced_doctor.years_experience %>)</h4>
</div>
